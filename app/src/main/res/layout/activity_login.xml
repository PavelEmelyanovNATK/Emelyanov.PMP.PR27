<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/i"
        android:scaleType="centerCrop"
        android:foreground="@drawable/white_gradient_background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >

        <LinearLayout

            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:outlineProvider="bounds"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:elevation="2dp">

            <ImageView
                android:layout_width="70dp"
                android:padding="25dp"

                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/message_ico" />

            <TextView
                android:layout_width="1dp"
                android:layout_marginVertical="3dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:foreground="#dddddd"
                />

            <EditText
                android:id="@+id/emailTb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:textColorHint="#aaaaaa"
                android:textColor="#777777"
                android:background="@null"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:scrollHorizontally="true"
                android:ellipsize="end"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:elevation="2dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:padding="25dp"

                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/lock_ico"/>

            <TextView
                android:layout_width="1dp"
                android:layout_marginVertical="3dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:foreground="#dddddd"
                />

            <EditText
                android:id="@+id/passTb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:textColorHint="#aaaaaa"
                android:textColor="#777777"
                android:background="@null"
                android:maxLines="1"
                android:inputType="textPassword"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Forgot password?"
            android:textColor="#999999"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"/>
        <Button
            android:elevation="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Sign In"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="#1347B2"
            android:layout_gravity="center_horizontal"
            android:onClick="LogInBtnClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="35dp"
            android:clickable="true"
            android:onClick="regLabelClick"
            android:text="Create A New Account?"
            android:textColor="#999999"
            android:textSize="16dp" />
    </LinearLayout>



</FrameLayout>